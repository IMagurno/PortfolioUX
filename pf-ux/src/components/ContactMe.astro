---
import Linkedin from "../components/Icons/Linkedin.astro";
import Mail from "../components/Icons/Mail.astro";
import Phone from "../components/Icons/Phone.astro";
---

<section
  id="contact"
  class="bg-[#202120] flex flex-row justify-center items-center h-full w-screen gap-10 py-10"
>
  <div class="flex flex-col justify-center items-center gap-4">
    <div>
      <h1 class="text-white text-5xl font-bold">Contact Me</h1>
    </div>
    <form action="">
      <div class="flex flex-col gap-2">
        <div class="flex flex-row gap-2">
          <div
            data-aos="fade-bottom"
            data-aos-delay="200"
            class="flex flex-col gap-2 w-full"
          >
            <label class="text-white" for="name">Name</label>
            <input
              type="text"
              class="bg-gray-200 border-2 border-white rounded-md p-2"
              placeholder="Name"
            />
          </div>
          <div
            data-aos="fade-bottom"
            data-aos-delay="200"
            class="flex flex-col gap-2 w-full"
          >
            <label class="text-white" for="name">Name</label>
            <input
              type="email"
              class="bg-gray-200 border-2 border-white rounded-md p-2"
              placeholder="Email"
            />
          </div>
        </div>
        <div
          data-aos="fade-bottom"
          data-aos-delay="300"
          class="flex flex-col gap-2 w-full pb-3"
        >
          <label class="text-white" for="message">Message</label>
          <textarea
            name="message"
            id="message"
            class="bg-gray-200 border-2 border-white rounded-md h-[140px] p-4"
            placeholder="Message"></textarea>
        </div>
        <button
          data-aos="fade-bottom"
          data-aos-delay="200"
          type="submit"
          class="bg-gray-200 text-black rounded-md p-2 hover:bg-gray-300 transition-all duration-300 transform hover:scale-100"
        >
          Send
        </button>
      </div>
    </form>
  </div>
  <ul class="flex flex-col gap-4 pt-10 items-start">
    <li
      data-aos="fade-left"
      data-aos-delay="200"
      class="flex flex-row gap-2 justify-center items-center"
    >
      <Linkedin />
      <a class="text-white" href="">Linkedin</a>
    </li>
    <li
      data-aos="fade-left"
      data-aos-delay="300"
      class="flex flex-row gap-2 justify-center items-center"
    >
      <Phone />
      <a class="text-white" href="">(011) 1234-5678</a>
    </li>
    <li
      data-aos="fade-left"
      data-aos-delay="400"
      class="flex flex-row gap-2 justify-center items-center"
    >
      <Mail />
      <a class="text-white" href="">email@example.com</a>
    </li>
  </ul>
</section>
